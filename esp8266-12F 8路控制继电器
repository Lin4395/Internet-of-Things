//如果保存的网络20S还连不上的话进入smartconfig模式。正常连接断网后会自动重连。

//*200523:8路继电器输出控制
//*200704:修改为直接写死账号密码
//**********************************************************************
#include "main.h"

#define  VERSION   "V3011"


void Relay1_On (void)
{
  digitalWrite(Relay1, RELAY_ON);
  
  BLINKER_LOG("Realy1 on!");
  Button1.color("#008000");                   //green
  Button1.text("已经打开");
  Button1.print("on");
}

void Relay1_Off (void)
{
  digitalWrite(Relay1, RELAY_OFF);

  BLINKER_LOG("Realy1 off!");
  Button1.color("#FF0000");                   //red
  Button1.text("已经关闭");
  Button1.print("off");
}

